/*------------------------------------*\
	#SCAFFOLD
\*------------------------------------*/

/*div*/.grid {

    background-color: $color--page;

}

/*div*/.grid--fill {

	& .grid__row {

		// Default mobile styles
		display: block;

		@media screen and (min-width: $breakpoint--desktop) {
			width: 100%;
			display: table;
		}
	}

	& .grid__column {
		
		// Default mobile styles
		display: block;

		@media screen and (min-width: $breakpoint--desktop) {
			display: table-cell;
		}
	}
	
}

/*div*/.grid__section {

}

/*div*/.grid__row {

	// Default mobile styles
	clear: both;
	vertical-align: top;
    background-color: $color--page;

}

.grid__row--content {
    
    // Default mobile styles
    
    // Tablet styles
    @media screen and (min-width: $breakpoint--tablet) {

        padding: $padding--normal * 2;

    }
}

/*div*/.grid__row--bordered .grid__column+.grid__column {

	border-top: 1px solid $color--lighter;

	@media screen and (min-width: $breakpoint--desktop) {

		border-top: 0;
		border-left: 1px solid $color--lighter;		

	}

}

.grid__row--ruled {
	
	border-top: $padding--half solid $color--lightest;

	&.grid__row--ruled--primary {

		border-color: $color--primary;

	}

	&.grid__row--ruled--invert {

		border-color: $color--darkestest;

	}

}

.grid__row--soft {

    padding:2rem 0;

}

/*div*/.grid__column {

	// Default mobile styles
	display: block;
	vertical-align: top;
	
	@media screen and (min-width: $breakpoint--desktop) {

		display: inline-block;

	}

}

.grid__column--content {

    // Default mobile styles

    // Tablet styles
    @media screen and (min-width: $breakpoint--tablet) {

        padding-right: $padding--normal * 2;

    }

    // Desktop styles
  	@media screen and (min-width: $breakpoint--desktop) {
    
        padding-right: $padding--normal * 2;

    }
}

@for $i from 1 to 13
{

	.grid__column--#{$i}
	{

		width: 100%;

		@media screen and (min-width: $breakpoint--desktop) {

			width: ($i / 12) * 100%;

		}

	}

}