@charset "UTF-8";
/// <reference path="../barnsley-council.scss" />

/**
 *
 * TESTIMONIAL
 * 
 * To be determined.
 *
 */

.testimonial {
	background-color: $color--primary;
	padding: $padding--normal*4 $padding--normal*2;
	text-align: center;
	color: $color--lightest;
}

.testimonial--small {
    padding: $padding--normal;
    font-size: 0.9rem;

    .testimonial__text {
        font-size: 1.2rem;
    }

}

.testimonial--tiny {
    padding: $padding--normal;
    font-size:0.8rem;

    .testimonial__text {
        font-size: 1rem;
        margin: 1rem 0;
    }

    .testimonial__nav {
        margin-top: 1rem;
    }
}

.testimonial__heading {
	margin: $padding--normal;
}

.testimonial__item--active {

	display: block;

}

.testimonial__item--hidden {

	display: none;

}

.testimonial__quote {

	display: block;
	font-style: normal;

	&:before {
		content: "";
	}

	&:after {
		content: "";
	}

}

.testimonial__text {

	margin: $padding--normal*2 0;
	font-size: $font__size--normal * 1.5;

	&:before {
		content: "\"";
	}

	&:after {
		content: "\"";
	}

}

.testimonial__author {

	display: block;
	font-style: normal;
	text-transform: uppercase;	
	font-size: $font__size--normal*0.8;
	font-weight: $font__weight--bold;
	margin-top: $padding--normal*-1;

}

.testimonial__nav {

	margin: $padding--normal*2 0 0;

}

.testimonial__nav__item:hover {
	cursor: pointer;
}

.testimonial__nav__item {
	display: inline-block;
	margin:$padding--half;
	width:16px;
	height: 16px;
	border-radius: 8px;
	border: 3px solid $color--lightest;
	background-color: $color--lightest;
    color: $color--darkest;
	overflow: hidden;
	text-indent:-10em;

}

.testimonial__nav__item--active {
	background-color: transparent;
    color: $color--lightest;
}

.testimonial--coloured {

	background-color: transparent;

	.testimonial__heading {
		color: $color--primary;
	}

	.testimonial__author {
		color: $color--darkest;
	}

	.testimonial__text {
		color: $color--light;
	}

	.testimonial__nav__item {
		background-color: $color--light;
		border-color: $color--light;
        color: $color--darkestest;
	}

	.testimonial__nav__item--active  {
		background-color: $color--primary;
		border-color: $color--light;
	}


}

//
.testimonial--primary {
    background-color: $color--primary;

	.testimonial__heading {
		color: $color--lightest;
	}

	.testimonial__author {
		color: $color--lightest;
	}

	.testimonial__text {
		color: $color--lightest;
	}

	.testimonial__nav__item {
		background-color: $color--lightest;
		border-color: $color--lightest;
        color: $color--darkestest;
	}

	.testimonial__nav__item--active  {
		background-color: $color--primary;
		border-color: $color--lightest;
	}
}

//
.testimonial--inverted {
    background-color: $color--darkest;

	.testimonial__heading {
		color: $color--lightest;
	}

	.testimonial__author {
		color: $color--lightest;
	}

	.testimonial__text {
		color: $color--lightest;
	}

	.testimonial__nav__item {
		background-color: $color--lightest;
		border-color: $color--lightest;
        color: $color--darkestest;
	}

	.testimonial__nav__item--active  {
		background-color: $color--primary;
		border-color: $color--lightest;
	}
}

//  Accent theme which is a shade off the primary colour
.testimonial--accent {
    background-color: darken($color--primary, 10%);

	.testimonial__heading {
		color: $color--lightest;
	}

	.testimonial__author {
		color: $color--lightest;
	}

	.testimonial__text {
		color: $color--lightest;
	}

	.testimonial__nav__item {
		background-color: $color--lightest;
		border-color: $color--lightest;
        color: $color--darkestest;
	}

	.testimonial__nav__item--active  {
		background-color: darken($color--primary, 10%);
		border-color: $color--lightest;
	}
}

//  Dark theme
.testimonial--dark {
     background-color: $color--darkish;

	.testimonial__heading {
		color: $color--lightest;
	}

	.testimonial__author {
		color: $color--lightest;
	}

	.testimonial__text {
		color: $color--lightest;
	}

	.testimonial__nav__item {
		background-color: $color--lightest;
		border-color: $color--lightest;
        color: $color--darkish;
	}

	.testimonial__nav__item--active  {
		background-color: $color--darkish;
		border-color: $color--lightest;
	}
}

//  Light theme
.testimonial--light {
    background-color: $color--lighter;

	.testimonial__heading {
		color: $color--text;
	}

	.testimonial__author {
		color: $color--text;
	}

	.testimonial__text {
		color: $color--text;
	}

	.testimonial__nav__item {
		background-color: $color--lightest;
		border-color: $color--lightest;
        color: $color--darkish;
	}

	.testimonial__nav__item--active  {
		background-color: $color--darkish;
		border-color: $color--lightest;
	}
}

//  Muted theme
.testimonial--muted {
    background-color: $color--lightest;

	.testimonial__heading {
		color: $color--light;
	}

	.testimonial__author {
		color: $color--light;
	}

	.testimonial__text {
		color: $color--light;
	}

	.testimonial__nav__item {
		background-color: $color--light;
		border-color: $color--light;
        color: $color--text;
	}

	.testimonial__nav__item--active  {
		background-color: $color--light;
		border-color: $color--light;
	}
}
